<UserControl x:Class="ACCSetupManager.MechanicalBalanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ACCSetupManager"
             xmlns:viewModels="clr-namespace:ACCSetupManager.ViewModels"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             d:DataContext="{d:DesignInstance viewModels:MechanicalBalanceViewModel}"
             IsEnabled="False">
  <Grid HorizontalAlignment="Stretch"
        VerticalAlignment="Top">

    <Grid.ColumnDefinitions>
      <ColumnDefinition />
      <ColumnDefinition />
      <ColumnDefinition />
      <ColumnDefinition />
    </Grid.ColumnDefinitions>

    <Grid.RowDefinitions>
      <RowDefinition />
      <RowDefinition />
      <RowDefinition />
      <RowDefinition />
    </Grid.RowDefinitions>

    <GroupBox Grid.Column="1"
              Grid.Row="0"
              Grid.ColumnSpan="2"
              Header="Front"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Top">

      <Grid HorizontalAlignment="Stretch"
            VerticalAlignment="Top">

        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
          <RowDefinition />
          <RowDefinition />
          <RowDefinition />
          <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0"
                   Grid.Row="0"
                   Margin="5">
          Anti Roll Bar
        </TextBlock>
        <syncfusion:UpDown Grid.Column="1"
                           Grid.Row="0"
                           Value="{Binding ArbFront}"
                           MinValue="0"
                           MaxValue="8"
                           Step="1"
                           NumberDecimalDigits="0" />

        <TextBlock Grid.Column="0"
                   Grid.Row="1"
                   Margin="5">
          Brake Power %
        </TextBlock>
        <syncfusion:UpDown Grid.Column="1"
                           Grid.Row="1"
                           Value="{Binding BrakePower}"
                           MinValue="80"
                           MaxValue="100"
                           Step="1"
                           NumberDecimalDigits="0" />

        <TextBlock Grid.Column="0"
                   Grid.Row="2"
                   Margin="5">
          Brake Bias %
        </TextBlock>
        <syncfusion:UpDown Grid.Column="1"
                           Grid.Row="2"
                           Value="{Binding BrakeBias}"
                           MinValue="57"
                           MaxValue="78"
                           Step="0.1"
                           NumberDecimalDigits="1" />

        <TextBlock Grid.Column="0"
                   Grid.Row="3"
                   Margin="5">
          Steering Ratio
        </TextBlock>
        <syncfusion:UpDown Grid.Column="1"
                           Grid.Row="3"
                           Value="{Binding SteerRatio}"
                           MinValue="14"
                           MaxValue="18"
                           Step="1"
                           NumberDecimalDigits="0" />
      </Grid>
    </GroupBox>

    <local:MechanicalGripView Grid.Column="0"
                              Grid.ColumnSpan="2"
                              Grid.Row="1"
                              DataContext="{Binding LeftFrontMechanicalGroup}" />

    <local:MechanicalGripView Grid.Column="2"
                              Grid.ColumnSpan="2"
                              Grid.Row="1"
                              DataContext="{Binding RightFrontMechanicalGroup}" />

    <local:MechanicalGripView Grid.Column="0"
                              Grid.ColumnSpan="2"
                              Grid.Row="2"
                              DataContext="{Binding LeftRearMechanicalGroup}" />

    <local:MechanicalGripView Grid.Column="2"
                              Grid.ColumnSpan="2"
                              Grid.Row="2"
                              DataContext="{Binding RightRearMechanicalGroup}" />
    <GroupBox Grid.Column="1"
              Grid.Row="3"
              Grid.ColumnSpan="2"
              Header="Rear"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Top">

      <Grid HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom">

        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
          <RowDefinition />
          <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Grid.Column="0"
                   Grid.Row="0"
                   Margin="5">
          Anti Roll Bar
        </TextBlock>
        <syncfusion:UpDown Grid.Column="1"
                           Grid.Row="0"
                           Value="{Binding ArbRear}"
                           MinValue="0"
                           MaxValue="8"
                           Step="1"
                           NumberDecimalDigits="0" />

        <TextBlock Grid.Column="0"
                   Grid.Row="1"
                   Margin="5">
          Preload Differential Nm
        </TextBlock>
        <syncfusion:UpDown Grid.Column="1"
                           Grid.Row="1"
                           Value="{Binding DifferentialPreload}"
                           MinValue="20"
                           MaxValue="300"
                           Step="10"
                           NumberDecimalDigits="0" />
      </Grid>
    </GroupBox>

  </Grid>
</UserControl>